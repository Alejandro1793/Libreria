<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtTituloLibroPrestado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:background="@drawable/forma_boton_contraria"
        android:fontFamily="@font/nova_slim"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#6680d4"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFechaEntregaAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forma_boton"
        android:fontFamily="@font/nova_slim"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloLibroPrestado"
        app:layout_constraintVertical_bias="0.344" />

    <ImageView
        android:id="@+id/imPortadaAlumno"
        android:layout_width="177dp"
        android:layout_height="223dp"
        android:contentDescription="@string/imagenprincipal"
        android:src="@drawable/fab_label_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/txtTituloLibroPrestado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469"
        app:srcCompat="@drawable/noimg" />
</androidx.constraintlayout.widget.ConstraintLayout>