<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="208dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtNombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:fontFamily="@font/francois_one"
            android:gravity="center"
            android:textColor="#6680d4"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinealTitulo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:padding="2sp"
                android:text="@string/titulo"
                android:textColor="#6680d4" />

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="3sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/separador" />

        <LinearLayout
            android:id="@+id/LinealFechaPrestamo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblFechaPrestamo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:padding="2sp"
                android:text="@string/fecha_de_pr_stamo"
                android:textColor="#6680d4" />

            <TextView
                android:id="@+id/txtFechaPrestamo"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="3sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/separador" />

        <LinearLayout
            android:id="@+id/LinealFechaEntrega"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblFechaEntrega"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:padding="2sp"
                android:text="@string/fecha_de_entrega"
                android:textColor="#6680d4" />

            <TextView
                android:id="@+id/txtFechaEntrega"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="3sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/separador" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>