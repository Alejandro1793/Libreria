<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="373dp"
        android:layout_height="383dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326">

        <TextView
            android:id="@+id/btnAceptarAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yanone_kaffeesatz"
            android:text="@string/aceptar"
            android:textColor="#6680D4"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.775" />

        <EditText
            android:id="@+id/etIdAlumno"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:backgroundTint="#6680d4"
            android:drawableStart="@drawable/ic_id_24dp"
            android:ems="10"
            android:fontFamily="@font/nova_slim"
            android:hint="@string/introduce_id_alumno"
            android:inputType="number"
            android:maxLength="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

        <EditText
            android:id="@+id/etNombreAlumno"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:backgroundTint="#6680d4"
            android:drawableStart="@drawable/ic_person_color"
            android:ems="10"
            android:fontFamily="@font/nova_slim"
            android:hint="@string/introduce_las_iniciales_del_alumno"
            android:inputType="textPersonName"
            android:maxLength="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.334" />

        <EditText
            android:id="@+id/etEmailAlumno"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:backgroundTint="#6680d4"
            android:drawableStart="@drawable/ic_email_color_24dp"
            android:ems="10"
            android:fontFamily="@font/nova_slim"
            android:hint="@string/introduce_email_alumno"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.548" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>